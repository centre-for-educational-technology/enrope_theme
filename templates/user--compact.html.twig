<div class="col-sm-6 col-lg-4 mb-3">
  <div class="card">
    <div class="card-body text-center">

      <a href="{{ path('entity.user.canonical', {'user': user.id}) }}">

        <div class="views-field views-field-field-first-name">
          <div class="field-content">

            {{ user.field_first_name.value }}

          </div>
        </div>


        <div class="views-field views-field-user-picture">
          <div class="field-content">
            {% if (user.user_picture.entity.fileuri != NULL) %}
              <img src="{{ file_url(user.user_picture.entity.fileuri) }}"
                   class="img-thumbnail image-style-avatar rounded-circle">
            {% else %}
              <img src="{{ url('<front>') }}/{{ directory }}/img/user.png"
                   class="img-thumbnail image-style-avatar rounded-circle">
            {% endif %}

          </div>
        </div>
      </a>


    </div>
  </div>
</div>
